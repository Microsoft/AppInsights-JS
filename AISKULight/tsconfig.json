{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es3",
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "AISKULight/types",
    "outDir": "dist-esm",
    "rootDir": "AISKULight"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}