{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es5",
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "AppInsightsCommon/types",
    "outDir": "dist-esm",
    "rootDir": "AppInsightsCommon/src"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}