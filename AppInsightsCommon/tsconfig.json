{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "module": "amd",
    "moduleResolution": "Node",
    "target": "es5",
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "amd/bundle",
    "rootDir": "AppInsightsCommon"
  },
  "include": [
    "./*.ts",
    "Interfaces/**/*",
    "Telemetry/**/*"
  ],
  "exclude": ["node_modules"]
}